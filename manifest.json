{
    "manifest_version": 3,
    "name": "XHR & Fetch Logger",
    "version": "1.0",
    "permissions": ["scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["bridge.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["page_inject.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
